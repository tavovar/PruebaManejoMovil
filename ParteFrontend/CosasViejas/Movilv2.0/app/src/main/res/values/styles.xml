<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Fondos" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:background">#FFFFFF</item>
    </style>


    <style name="BotonesSeleccion" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="BotoneMenu" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="GreenText" parent="@android:style/TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#15AF37</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RedText" parent="@android:style/TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CampoTexto" parent="@android:style/TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15dp</item>
    </style>


</resources>
